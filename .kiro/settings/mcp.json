{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "disabled": false,
      "autoApprove": [
        "create_repository",
        "get_file_contents",
        "push_files",
        "create_or_update_file",
        "get_repository",
        "list_repositories",
        "search_repositories",
        "create_issue",
        "create_pull_request",
        "list_issues",
        "list_commits",
        "get_issue",
        "update_issue"
      ]
    }
  }
}